<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">
        <!-- Home Logo Text -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_logo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Ecommerce"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Home first editText -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/home_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/drawable_search_bg"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:hint="이커머스와 함께 하세요" />

        <!-- Home first title text -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_title_text"
            android:textSize="18dp"
            android:text="추천 상품"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Home hor recommend Rec -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recommend_hol_rec"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_advertise_text"
            android:layout_marginTop="18dp"
            android:textSize="18dp"
            android:text="광고 상품"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_advertise_ver_rec"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>